---
export const prerender = true;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Waita ‚Äì Launching Soon</title>

    <!-- Inter font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: 'Inter', sans-serif;
        margin: 0;
      }
      .noise {
        position: fixed;
        inset: 0;
        pointer-events: none;
        background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABAQMAAAAl21bKAAAAA1BMVEX///+nxBvIAAAACklEQVR42mOAAQAAAgAB9HFkWQAAAABJRU5ErkJggg==");
        opacity: 0.07;
        z-index: 50;
      }
      .hero-bg {
        background: radial-gradient(circle at top, #ffffff10 0%, #0f0f0f 80%);
      }
    </style>
  </head>

  <body class="bg-[#0f0f0f] text-white relative">

    <div class="noise"></div>

    <!-- MAIN -->
    <main class="min-h-screen flex items-center py-20">
      <div class="w-full max-w-7xl mx-auto px-6 lg:px-12">

        <!-- HEADER -->
        <header class="flex items-center justify-between mb-12">
          <div class="flex items-center gap-3">
            <div
              class="h-10 w-10 rounded-xl border border-white/20 flex items-center justify-center font-bold tracking-wider"
            >
              WT
            </div>
            <div class="leading-tight">
              <div class="text-sm font-semibold tracking-[0.25em]">
                WAITA
              </div>
              <div class="text-xs text-white/50 uppercase">
                Launch Template
              </div>
            </div>
          </div>

          <p class="hidden sm:block text-xs text-white/50">
            Launching <span class="text-white">Nov 12th</span>
          </p>
        </header>

        <!-- GRID: LEFT TEXT + RIGHT CAROUSEL -->
        <section class="grid grid-cols-1 lg:grid-cols-[1.2fr_1fr] gap-16 lg:gap-24 items-center">

          <!-- LEFT TEXT -->
          <div class="space-y-6">

            <!-- Badge -->
            <div
              class="inline-flex items-center gap-2 rounded-full border border-white/15 bg-white/[0.06] px-3 py-1 text-xs text-white/70 backdrop-blur"
            >
              <span class="h-1.5 w-1.5 rounded-full bg-emerald-400"></span>
              <span class="uppercase tracking-[0.2em] text-[0.65rem]">
                launching nov 12th
              </span>
            </div>

            <div class="space-y-4">
              <h1 class="text-4xl sm:text-5xl font-semibold leading-tight">
                Ready to launch your
                <span class="block text-white/70">product, course or app?</span>
              </h1>

              <p class="text-base text-white/60 max-w-xl">
                Waita is a clean and minimal waitlist-style launch page template
                designed to help you validate your idea and start collecting leads fast.
              </p>
            </div>

            <!-- Avatars -->
            <div class="flex items-center gap-4">
              <div class="flex -space-x-3">
                <div class="h-9 w-9 rounded-full border border-black bg-white/60 flex items-center justify-center text-sm font-semibold text-black">A</div>
                <div class="h-9 w-9 rounded-full border border-black bg-white/40 flex items-center justify-center text-sm font-semibold text-black">R</div>
                <div class="h-9 w-9 rounded-full border border-black bg-white/40 flex items-center justify-center text-sm text-black">üôÇ</div>
              </div>

              <p class="text-sm text-white/50">
                12+ creators already joined.
              </p>
            </div>

          </div>

          <!-- RIGHT COLUMN ‚Äî IMAGE CAROUSEL -->
          <div class="relative w-full h-full flex items-center justify-center">

            <div class="relative w-full max-w-md overflow-hidden rounded-3xl shadow-xl border border-white/10">

              <!-- Slides -->
              <div id="carousel" class="whitespace-nowrap transition-transform duration-700 ease-out">

                <img src="/img/slide1.jpg"
                     class="inline-block w-full h-96 object-cover" />

                <img src="/img/slide2.jpg"
                     class="inline-block w-full h-96 object-cover" />

                <img src="/img/slide3.jpg"
                     class="inline-block w-full h-96 object-cover" />

              </div>

              <!-- Controls -->
              <div class="absolute inset-0 flex items-center justify-between px-4">
                <button onclick="prevSlide()"
                  class="bg-black/40 hover:bg-black/60 text-white rounded-full p-2 transition">
                  ‚Üê
                </button>

                <button onclick="nextSlide()"
                  class="bg-black/40 hover:bg-black/60 text-white rounded-full p-2 transition">
                  ‚Üí
                </button>
              </div>

            </div>

            <!-- JS -->
            <script>
              let slide = 0;
              const total = 3;

              function update() {
                const c = document.getElementById("carousel");
                c.style.transform = `translateX(-${slide * 100}%)`;
              }

              function nextSlide() {
                slide = (slide + 1) % total;
                update();
              }

              function prevSlide() {
                slide = (slide - 1 + total) % total;
                update();
              }
            </script>

          </div>
        </section>

        <!-- FOOTER -->
        <footer class="mt-16 text-xs text-white/40 text-center">
          ¬© Waita ‚Äî Launch Template ‚Ä¢ {new Date().getFullYear()}
        </footer>

      </div>

    </main>

  </body>
</html>
